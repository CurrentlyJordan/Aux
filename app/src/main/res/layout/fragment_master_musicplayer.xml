<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_panel_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/upvotebutton"
            android:layout_width="0dp"
            android:layout_height="@dimen/music_player_button_height"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/music_player_icon_size"
                android:layout_height="@dimen/music_player_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle_white_24dp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/playbutton"
            android:layout_width="0dp"
            android:layout_height="@dimen/music_player_button_height"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/music_player_icon_size"
                android:layout_height="@dimen/music_player_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_filled_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/pausebutton"
            android:layout_width="0dp"
            android:layout_height="@dimen/music_player_button_height"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/music_player_icon_size"
                android:layout_height="@dimen/music_player_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_pause_circle_outline_white_24dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/downvotebutton"
            android:layout_width="0dp"
            android:layout_height="@dimen/music_player_button_height"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/music_player_icon_size"
                android:layout_height="@dimen/music_player_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_cancel_white_24dp" />

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/current_playing_song_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Tap to like or veto the currently playing song."
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
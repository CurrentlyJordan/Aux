<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/colorGrey"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playlist_album_art_text_view"
                android:layout_width="@dimen/track_list_image_view_height"
                android:layout_height="@dimen/track_list_image_view_height"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/track_list_text_padding">

                <TextView
                    android:id="@+id/playlist_song_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Song Name Dummy Text"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/track_list_text_song_name_size" />

                <TextView
                    android:id="@+id/playlist_artist_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artist Name Dummy Text"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/track_list_text_artist_name_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#15808080" />

</LinearLayout>